{
  "name": "angular-skeleton",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4001",
    "start:bstack": "ng serve --port=1337 --disableHostCheck=true",
    "build:dev": "rimraf dist && ng build",
    "build:stage": "rimraf dist && ng build --configuration=staging",
    "build": "rimraf dist && ng build --prod",
    "test:ci": "jest --browsers=ChromeHeadless",
    "test": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "test:no-watch": "jest",
    "lint-staged": "lint-staged",
    "lint:scss:fix": "stylelint src/**/*.scss --syntax=scss --fix --color",
    "lint:ts:fix": "ng lint --fix",
    "lint": "run-p lint:ts",
    "prettier:changes": "pretty-quick --staged",
    "prettier:format-all": "prettier --config .prettierrc.json --write 'src/{app,environments,assets}/**/*{.ts,.js,.json,.html}'",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer dist/angular-skeleton/stats-es2015.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.2.1",
    "@angular/cdk": "^11.2.1",
    "@angular/common": "^11.2.1",
    "@angular/compiler": "^11.2.1",
    "@angular/core": "^11.2.1",
    "@angular/fire": "^6.1.4",
    "@angular/flex-layout": "^11.0.0-beta.33",
    "@angular/forms": "^11.2.1",
    "@angular/material": "^11.2.1",
    "@angular/platform-browser": "^11.2.1",
    "@angular/platform-browser-dynamic": "^11.2.1",
    "@angular/router": "^11.2.1",
    "@ngrx/effects": "^11.0.1",
    "@ngrx/router-store": "^11.0.1",
    "@ngrx/store": "^11.0.1",
    "core-js": "^3.8.3",
    "firebase": "^8.2.7",
    "moment": "^2.27.0",
    "rxjs": "^6.6.3",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "11.0.0",
    "@angular-devkit/build-angular": "^0.1102.1",
    "@angular/cli": "^11.2.1",
    "@angular/compiler-cli": "^11.2.1",
    "@ngrx/schematics": "^11.0.1",
    "@ngrx/store-devtools": "^11.0.1",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.28",
    "codelyzer": "^6.0.1",
    "firebase-tools": "^9.4.0",
    "husky": "^5.0.9",
    "jest": "26.6.3",
    "jest-cli": "^26.5.2",
    "jest-preset-angular": "^8.3.1",
    "lint-staged": "^10.5.4",
    "ngrx-store-freeze": "^0.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.10.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.19.0",
    "ts-node": "^9.1.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s -n prettier:changes lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "npm run lint:scss"
    ],
    "*.ts": [
      "npm run lint"
    ]
  }
}
