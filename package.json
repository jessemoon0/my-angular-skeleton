{
  "name": "angular-skeleton",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4001",
    "start:bstack": "ng serve --port=1337 --disableHostCheck=true",
    "build:dev": "rimraf dist && ng build",
    "build:stage": "rimraf dist && ng build --configuration=staging",
    "build": "rimraf dist && ng build --prod",
    "test:ci": "jest --browsers=ChromeHeadless",
    "test": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "test:no-watch": "jest",
    "lint-staged": "lint-staged",
    "lint:scss:fix": "stylelint src/**/*.scss --syntax=scss --fix --color",
    "lint:ts:fix": "ng lint --fix",
    "lint": "run-p lint:ts",
    "prettier:changes": "pretty-quick --staged",
    "prettier:format-all": "prettier --config .prettierrc.json --write 'src/{app,environments,assets}/**/*{.ts,.js,.json,.html}'",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer dist/angular-skeleton/stats-es2015.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.4",
    "@angular/cdk": "^10.2.4",
    "@angular/common": "^10.2.4",
    "@angular/compiler": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/fire": "^6.1.4",
    "@angular/flex-layout": "^10.0.0-beta.32",
    "@angular/forms": "^10.2.4",
    "@angular/material": "^10.2.4",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@ngrx/effects": "^10.1.2",
    "@ngrx/entity": "^10.1.2",
    "@ngrx/router-store": "^10.1.2",
    "@ngrx/store": "^10.1.2",
    "core-js": "^3.8.3",
    "firebase": "^8.2.7",
    "moment": "^2.27.0",
    "rxjs": "^6.5.3",
    "tslib": "^2.1.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "10.0.1",
    "@angular-devkit/build-angular": "^0.1002.2",
    "@angular/cli": "^10.2.2",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@ngrx/schematics": "^10.1.2",
    "@ngrx/store-devtools": "^10.1.2",
    "@types/jest": "26.0.14",
    "@types/node": "^14.14.28",
    "codelyzer": "^5.2.2",
    "firebase-tools": "^8.20.0",
    "husky": "^4.3.8",
    "jest": "26.5.2",
    "jest-cli": "^26.5.2",
    "jest-preset-angular": "^8.3.1",
    "lint-staged": "^10.5.4",
    "ngrx-store-freeze": "^0.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.10.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.19.0",
    "ts-node": "^8.8.2",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s -n prettier:changes lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "npm run lint:scss"
    ],
    "*.ts": [
      "npm run lint"
    ]
  }
}
