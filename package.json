{
  "name": "angular-skeleton",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4001",
    "build:dev": "rimraf dist && ng build",
    "transloco:optimize": "transloco-optimize dist/angular-skeleton/assets/i18n",
    "build": "rimraf dist && ng build --prod && npm run transloco:optimize",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test": "ng test",
    "lint-staged": "lint-staged",
    "lint:scss:format-all": "stylelint src/**/*.scss --config .stylelintrc.json --fix",
    "lint:scss": "stylelint --config .stylelintrc.json --fix",
    "lint:ts:format-all": "ng lint --fix",
    "lint:ts": "ng lint",
    "lint": "run-p lint:ts",
    "prettier:changes": "pretty-quick --staged",
    "prettier:format-all": "prettier --config .prettierrc.json --write 'src/{app,environments,assets}/**/*{.ts,.js,.json,.html}'",
    "e2e": "ng e2e",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer dist/angular-skeleton/stats-es2015.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.0",
    "@angular/cdk": "~9.2.0",
    "@angular/common": "~9.1.0",
    "@angular/compiler": "~9.1.0",
    "@angular/core": "~9.1.0",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "~9.1.0",
    "@angular/material": "^9.2.0",
    "@angular/platform-browser": "~9.1.0",
    "@angular/platform-browser-dynamic": "~9.1.0",
    "@angular/router": "~9.1.0",
    "@ngneat/transloco": "^2.14.0",
    "@ngneat/transloco-optimize": "^1.0.1",
    "@ngrx/effects": "^9.0.0",
    "@ngrx/entity": "^9.0.0",
    "@ngrx/router-store": "^9.0.0",
    "@ngrx/store": "^9.0.0",
    "core-js": "^3.6.4",
    "rxjs": "~6.5.4",
    "tslib": "^1.11.1",
    "zone.js": "~0.10.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": "run-s prettier:changes lint-staged lint",
      "post-merge": "npm i"
    }
  },
  "lint-staged": {
    "*.scss": [
      "npm run lint:scss"
    ]
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.0",
    "@angular/cli": "~9.1.0",
    "@angular/compiler-cli": "~9.1.0",
    "@angular/language-service": "~9.1.0",
    "@ngrx/schematics": "^9.0.0",
    "@ngrx/store-devtools": "^9.0.0",
    "@types/jasmine": "~3.5.10",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^13.9.5",
    "codelyzer": "^5.2.2",
    "husky": "^4.2.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "lint-staged": "^10.0.9",
    "ngrx-store-freeze": "^0.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.3",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.16.0",
    "ts-node": "~8.8.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~3.7.5"
  }
}
