{
  "name": "angular-skeleton",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4001",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test": "ng test",
    "e2e": "ng e2e",
    "lint-staged": "lint-staged",
    "lint:scss": "stylelint src/**/*.scss --fix",
    "lint:ts:fix": "ng lint --fix",
    "lint": "ng lint",
    "prettier:changes": "pretty-quick --staged --pattern '**/*.*(js|ts|html|json)'",
    "prettier:format-all": "prettier --config .prettierrc --write 'src/{app,environments,assets}/**/*{.ts,.js,.json,.html}'",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer dist/angular-skeleton/stats-es2015.json",
    "build:dev": "rimraf dist && ng build",
    "build": "rimraf dist && ng build --prod",
    "deploy:firebase:dev": "npm run build:dev && firebase deploy -P dev",
    "deploy:firebase": "npm run build && firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.3",
    "@angular/cdk": "~9.2.1",
    "@angular/common": "~9.1.3",
    "@angular/compiler": "~9.1.3",
    "@angular/core": "~9.1.3",
    "@angular/fire": "^6.0.0",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "~9.1.3",
    "@angular/material": "^9.2.1",
    "@angular/platform-browser": "~9.1.3",
    "@angular/platform-browser-dynamic": "~9.1.3",
    "@angular/router": "~9.1.3",
    "@ngrx/effects": "^9.1.0",
    "@ngrx/entity": "^9.1.0",
    "@ngrx/router-store": "^9.1.0",
    "@ngrx/store": "^9.1.0",
    "core-js": "^3.6.5",
    "firebase": "^7.14.2",
    "rxjs": "~6.5.5",
    "tslib": "^1.11.1",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.3",
    "@angular/cli": "^9.1.3",
    "@angular/compiler-cli": "~9.1.3",
    "@angular/language-service": "~9.1.3",
    "@ngrx/schematics": "^9.1.0",
    "@ngrx/store-devtools": "^9.1.0",
    "@types/jasmine": "~3.5.10",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^13.13.2",
    "codelyzer": "^5.2.2",
    "husky": "^4.2.5",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~5.0.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "lint-staged": "^10.1.7",
    "ngrx-store-freeze": "^0.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.4",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.1",
    "ts-node": "~8.9.0",
    "tslint": "~6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": "run-s prettier:changes lint-staged lint",
      "post-merge": "npm i"
    }
  },
  "lint-staged": {
    "*.scss": [
      "npm run lint:scss"
    ]
  }
}
